<html>
    <head>
        <%- include('../partials/meta-content', { title: 'D&D 5th Edition' }) %>

    </head>
    <body>
        <%- include('../partials/header') %>
        <div class="col-md-6">
            <h1><%= username %>'s Profile</h1>
            <p>Welcome to your profile, <%= username%>!</p>
        </div>

        <!-- Main Content -->
        <main class="py-5">
            <div class="container">
                <h2>Your Characters</h2>
                <hr>
                <% if (characters.length === 0) { %>
                    <p>You don't have any characters yet!</p>
                <% } else { %>
                    <div class="row">
                        <% characters.forEach(function(character) { %>
                            <div class="col-md-4 mb-3">
                                <div class="card-body">
                                    <h5 class="card-title"><%= character.name %></h5>
                                    <p class="card-text">Race: <%= character.Race%></p>
                                    <p class="card-text">Class: <%= character.Class%></p>
                                    <p class="card-text">Level: <%= character.Level%></p>
                                    <a href="/character/<%= character.id %>" class="btn btn-outline-dark">View Character</a>
                                </div>                         
                            </div>
                        <% }); %>    
                    </div>
               <% } %>
            </div>
        </main>
        <%- include('../partials/footer') %>
    </body>
</html>